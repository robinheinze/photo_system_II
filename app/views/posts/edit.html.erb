<%= content_for(:navigation) do %>
  <% if current_user %>
    <p>Logged in as <%= current_user.name %>.</p>
    <p><%= link_to "Log the F*^$ out!", logout_path %></p>
    <p><%= link_to "Main Page", "/" %></p>
  <% else %>
  <p><%= link_to "Login", login_path %></p>
  <p><%= link_to "Main Page", "/" %></p>
  <% end %>
<% end %>

<% content_for(:header) do %>
  <div class="header">
    <h1>Edit Post</h1>
  </div>
<% end %>
<div class="row">
  <%= render 'form'%>
</div>

<div class="row">
  <div class="col-sm-4">
  </div>
  <div class="col-sm-4">
    <h3>Tag a friend</h3>
    <%= form_for(@tag) do |f| %>
      <div class="form-group">
        <%= f.label :User %>
        <%= f.collection_select :user_id, User.all, :id, :name, :class => "form-control" %>
      </div>
      <%= f.hidden_field :post_id, :value => @post.id %>
      <div class="form-group">
        <%= f.submit "Add Tag", :class => 'btn btn-info' %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-4">
  </div>
</div>


