<!DOCTYPE html>
<html>
<head>
  <title>Photo Sharing</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="row">

      <div class= "col-sm-3 navigation">
        <%= yield(:navigation) %>
      </div>

      <div class= "col-sm-9">

        <div class="row">
          <%= yield(:header) %>

          <%= flash[:notice] %>
          <%= flash[:alert] %>
          <%= yield %>
        </div>
      </div>

    </div>
  </div>
</body>
</html>
