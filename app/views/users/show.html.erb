<%= content_for(:navigation) do %>
  <% if current_user %>
    <p>Logged in as <%= current_user.name %>.</p>
    <p><%= link_to "Log the F*^$ out!", logout_path %></p>
    <p><%= link_to "Main Page", "/" %></p>
  <% else %>
  <p><%= link_to "Login", login_path %></p>
  <p><%= link_to "Main Page", "/" %></p>
  <% end %>
<% end %>

<% content_for(:header) do %>
  <div class="header">
    <h1><%= @user.name %>'s Awesome Posts</h1>
  </div>
<% end %>
<div class="row">
  <ul>
    <% @user.posts.each do |post| %>
      <li><p><%= post.title %>: <%= post.content %></p>
          <p><%= image_tag post.photo.url(:small) %>
          <% if post.tags.any? %>
            <p>
              Tagged friends: <%= post.tagged_users.map{|user| user.name }.join(", ") %>
            </p>
          <% end %>
          <% if @user == current_user %>
          <span class="redstuff"><%= link_to " ☠ ", user_post_path(@user, post), :data => {:confirm => "Are you quite certain?",
                                   :method => "delete"} %></span> | <%= link_to "Edit or Tag", edit_user_post_path(@user, post) %></p>
          <% end %>
      </li>
    <% end %>
  </ul>
</div>
<div class="row">
  <div class="col-sm-3">
  <% if @user == current_user %>
  <p><%= link_to "New post", new_user_post_path(@user) %></p>
  <p>Delete account for <%= @user.name %> <span class="redstuff"><%= link_to " ☠ ", user_path(@user), :data => {:confirm => "Are you quite certain?",
                                 :method => "delete"} %></p></span></p>
  <% end %>
  </div>
  <div class="col-sm-9">
  </div>
</div>
